{
    "extends": "eslint:recommended",
    
    "parser": "babel-eslint",
    "parserOptions": {
      "sourceType": "module",
      "allowImportExportEverywhere": true,
      "ecmaVersion": 8
    },
    "env": {
      "es6": true,
      "jest": true,
      "node": true
    },
    "rules": {
      "eol-last": "error",
      "eqeqeq": [
        "error",
        "always"
      ],
      "indent": [
        "off",
        2
      ],
      "new-cap": "warn",
      "no-console": "off",
      "no-multi-spaces": [
        "warn",
        {
          "exceptions": {
            "VariableDeclarator": true
          }
        }
      ],
      "no-redeclare": [
        "error",
        {
          "builtinGlobals": true
        }
      ],
      "no-template-curly-in-string": "error",
      "no-trailing-spaces": "warn",
      "no-undefined": "off",
      "quotes": [
        "warn",
        "single",
        {
          "allowTemplateLiterals": true
        }
      ],
      "semi": "error",
	  "no-unused-vars": ["error", { "vars": "all", "args": "after-used", "ignoreRestSiblings": false }]
    }
  }
  